generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model adminuser {
  id            String   @id
  email         String   @unique
  password_hash String
  role          String
  created_at    DateTime
}

model User {
  id       Int       @id @default(autoincrement())
  phone    String?   @unique
  name     String?
  status   Int       @default(1)
  type     Int       @default(1)
  building String
  flat     String
  vehicles Vehicle[]
  requests Request[]
}

model Vehicle {
  id        Int      @id @default(autoincrement())
  plate     String   @unique
  name      String?
  users     User[]
  createdAt DateTime @default(now())
  expireAt  DateTime
  comments  String?

  @@index([expireAt(sort: Desc), plate])
}

model Request {
  id        Int      @id @default(autoincrement())
  plate     String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  expireAt  DateTime

  @@index([expireAt(sort: Desc), plate])
}
